<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.syc.mywechat.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#999"/>

    <RadioGroup android:id="@+id/rg_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

        <RadioButton android:id="@+id/rb_wechat"
                     style="@style/wechat_style"
                     android:checked="true"
                     android:drawableTop="@drawable/wechat_selector"
                     android:text="微信"/>

        <RadioButton android:id="@+id/rb_contacts"
                     style="@style/wechat_style"
                     android:drawableTop="@drawable/contacts_selector"
                     android:text="通讯录"/>

        <RadioButton android:id="@+id/rb_find"
                     style="@style/wechat_style"
                     android:drawableTop="@drawable/find_selector"
                     android:text="发现"/>

        <RadioButton android:id="@+id/rb_me"
                     style="@style/wechat_style"
                     android:drawableTop="@drawable/me_selector"
                     android:text="我的"/>

    </RadioGroup>
</LinearLayout>
